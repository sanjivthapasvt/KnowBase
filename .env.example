# ── Application ──────────────────────────────────────────
APP_NAME=KnowBase
APP_ENV=development
DEBUG=true

# ── Database ─────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://knowbase:knowbase@localhost:5432/knowbase

